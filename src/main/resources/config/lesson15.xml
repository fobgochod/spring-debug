<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns="http://www.springframework.org/schema/beans"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
       http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="beforeInstantiation" class="com.mashibing.lesson15.beforeInstantiation.BeforeInstantiation"/>
    <bean id="myInstantiationAwareBeanPostProcessor"
          class="com.mashibing.lesson15.beforeInstantiation.MyInstantiationAwareBeanPostProcessor"/>

    <bean id="user" class="com.mashibing.lesson15.supplier.User"/>
    <bean class="com.mashibing.lesson15.supplier.SupplierBeanFactoryPostProcessor"/>


    <bean id="person" class="com.mashibing.lesson15.factorymethod.PersonStaticFactory" factory-method="getPerson">
        <constructor-arg value="123"/>
    </bean>

    <bean id="personInstanceFactory" class="com.mashibing.lesson15.factorymethod.PersonInstanceFactory"/>
    <bean id="person2" class="com.mashibing.lesson15.factorymethod.Person" factory-bean="personInstanceFactory"
          factory-method="getPerson">
        <constructor-arg value="wangwu"/>
    </bean>
</beans>
