<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="apple" class="com.mashibing.lesson14.lookup.Apple">
        <property name="banana" ref="banana"/>
    </bean>

    <bean id="banana" class="com.mashibing.lesson14.lookup.Banana" scope="prototype">

    </bean>

    <bean id="fruitplate1" class="com.mashibing.lesson14.lookup.FruitPlate">
        <lookup-method name="getFruit" bean="apple"/>
    </bean>

    <bean id="fruitplate2" class="com.mashibing.lesson14.lookup.FruitPlate">
        <lookup-method name="getFruit" bean="banana"/>
    </bean>

    <bean id="originalDog" class="com.mashibing.lesson14.replace.OriginalDog">
        <replaced-method name="sayHello" replacer="replaceDog">
            <arg-type match="java.lang.String"/>
        </replaced-method>
    </bean>

    <bean id="replaceDog" class="com.mashibing.lesson14.replace.ReplaceDog"/>
</beans>